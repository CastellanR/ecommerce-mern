{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Auth microservice documentation",
    "description": "Auth provides all auth services for the app"
  },
  "tags": [
    {
      "name": "/api/auth",
      "description": "API for authentication in the system"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "tags": ["/api/auth"],
        "summary": "Create a new user in system",
        "requestBody": {
          "description": "New user object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/CreateUser"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Please check your email to activate the account!"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Failed. Bad post data.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 422
                    },
                    "message": {
                      "type": "string",
                      "example": "Missing data error"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Crashed.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 500
                    },
                    "message": {
                      "type": "string",
                      "example": "Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["/api/auth"],
        "summary": "Log in an user in the system",
        "requestBody": {
          "description": "User credentials",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/LoginUser"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "schema": {
                        "$ref": "#/definitions/LoginResponse"
                      },
                      "example": {
                        "id": "idUser",
                        "email": "email@gmail.com",
                        "token": "Bearer token"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Failed.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Email inexistent, password doesn't match, user not activated"
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Failed. Bad post data.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 422
                    },
                    "message": {
                      "type": "string",
                      "example": "Missing data error"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Crashed.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 500
                    },
                    "message": {
                      "type": "string",
                      "example": "Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "CreateUser": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "LoginUser": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "deviceName": {
          "type": "string"
        },
        "agent": {
          "type": "string"
        },
        "keepSessionActive": {
          "type": "boolean"
        }
      }
    },
    "LoginResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "token": {
          "type": "string"
        }
      }
    }
  }
}
