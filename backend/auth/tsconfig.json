{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
  },
  "include": ["test","./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}